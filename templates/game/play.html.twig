{% extends 'base.html.twig' %}

{% block title %}Play{% endblock %}

{% block body %}
    <h1>Play</h1>
    {% dump(app.session.get('cards')) %}
    {% dump(colors) %}
    <div class="d-flex flex-row justify-content-around my-3 py-1">
        {#<span class="cards border d-inline f32 {{card.color}}{{card.value}}" title="{{card.color}}{{card.value}}"></span> 
    #}</div>
    <div class="d-flex flex-row justify-content-around my-3 py-1">
        <span>Ordre des couleurs :
            {% for color in colors %}
                {% if color == 'S' %}
                    Pique
                {% elseif color == 'H' %}
                    Coeur
                {% elseif color == 'D' %}
                    Carreau
                {% else %}
                    Tr√®fle
                {% endif %}
                {% if loop.index != loop.length %}-{% endif %}
            {% endfor %}
        </span>
        <span>Ordre des valeurs :
            {% for value in values %}
                {% if value == 'T' %}
                    10
                {% elseif value == 'J' %}
                    Valet
                {% elseif value == 'Q' %}
                    Dame
                {% elseif value == 'K' %}
                    Roi
                {% elseif value == 'A' %}
                    AS
                {% else %}
                    {{value}}
                {% endif %}
                {% if loop.index != loop.length %}-{% endif %}
            {% endfor %}
        </span>
    </div>
    <div class="bg-warning my-3 py-1">
        {% set c=0 %}
        {% for card in app.session.get('result')  %}
            {% if c == 0 %}
                <div class="d-flex flex-row justify-content-around my-3 py-1">
            {% endif %}   
                {% set c=c+1 %}
                 <div class="cards-bg d-flex flex-row border border-2 rounded-2">
                <span class="cards d-inline f32 {{card.color}}{{card.value}}" title="{{card.color}}{{card.value}}"></span>
                 </div>
            {% if c == 13 or loop.index==app.session.get('result')|length %}
                {% set c=0 %}
                </div>
            {% endif %}  
        {% else %}
            no records found
        {% endfor %}
    </div>
{% endblock %}

