{% extends 'base.html.twig' %}

{% block title %}Cards index{% endblock %}

{% block body %}
    <h1>Cards index</h1>
  {% dump(cards) %}
        {% set c=0 %}
        {% for card in cards %}
            {% if c == 0 %}
                <div>
            {% endif %}   
                {% set c=c+1 %}
                <span >{{card.color}}{{card.value}}</span>
            {% if c == 13 %}
                {% set c=0 %}
                </div>
            {% endif %}  
        {% else %}
            
                <td colspan="4">no records found</td>
          
        {% endfor %}
        
{% endblock %}